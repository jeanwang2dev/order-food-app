<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMsg) {%>
            <div class="user-msg user-msg--error"><%= errorMsg %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">E-mail</label>
                <input 
                    class="<%= validationErrors.find( e => e.param === 'email') ? 'invalid': '' %>" 
                    type="text" 
                    name="email" 
                    id="email"
                    value="test1@temptesting.com">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find( e => e.param === 'password') ? 'invalid': '' %>" 
                    type="password" 
                    name="password" 
                    id="password"
                    value="T3st888!">
            </div>
    
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Your Password</a>
       </div>     
    </main>
<%- include('../includes/end.ejs') %>