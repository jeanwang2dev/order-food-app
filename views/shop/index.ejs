<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>  
       <div> <a href="/admin/products">admin area</a> </div>
       <div> <a href="/products">customer area</a> </div>
       <p>This is the home page of shop</p>
       <p>Featured Products: </p>

       <% if (prods.length > 0 ) { %>   
        <div class="grid">  
            <% for (let product of prods) {  %>        
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                        <% if( product.isfeatured ) {%>
                            <div class="card__featured">featured</div>
                        <% } %>
                    </header>
                    <div class="card__image">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="<%= product.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$19.99</h2>
                        <p class="product__description">some descripton</p>
                    </div>
                    <div class="card__actions">
                        <a href="/products/<%= product._id %>" class="btn">Details</a>
                    </div>
                </article>
            <% } %>
        </div>
      <% } else { %>
            <h1>No Product Found!</h1>
      <% } %>
    </main>
<%- include('../includes/end.ejs') %>