<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/admin-nav.ejs') %>
    <main>
        <!-- <p><%=editing %></p> -->
        <form class="product-form" 
              action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<%  } %>" 
              method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) { %><%=product.title%><% } %>">
            </div>
            <div class="">
                <label for="title">Is this a featured product?</label>
                <% let checked = (editing && product.isfeatured)? "checked" : "" %>
                <input type="checkbox" name="isfeatured" value="1" <%= checked %> />
            </div>

            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>
            <button class="btn" type="submit">
                <% if (editing) { %>Update Product<% } else { %>Add product<% } %>
            </button>
        </form>
    </main>
<%- include('../includes/head.ejs') %>